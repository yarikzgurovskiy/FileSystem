@model FileSystem.Web.Models.FolderEditViewModel

@{
    ViewData["Title"] = "EditFolder";
}

<h2>EditFolder</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditFolder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(m => m.FolderId)
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <ul class="list-group">
                <li class="list-group-item list-group-item-info">
                    <span class="badge">@Model.Size bytes</span>
                    Size
                </li>
                <li class="list-group-item list-group-item-info">
                    <span class="badge">@Model.FoldersCount</span>
                    Number of folders
                </li>
                <li class="list-group-item list-group-item-info">
                    <span class="badge">@Model.FilesCount</span>
                    Number of files
                </li>
            </ul>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Drive" asp-route-id="@Model.FolderId">Back to folder</a>
</div>

